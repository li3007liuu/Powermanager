<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBack1"
    >
    <RelativeLayout style="@style/TopTitleBack1"
        >
        <TextView style="@style/TitleTextBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            />
        <Button style="@style/TitleButtonBack1"
            android:id="@+id/gy_button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_grzx_text"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            />
    </RelativeLayout>
    <View
        android:background="@color/colorBack2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageView
        android:src="@drawable/logo_app"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="fitCenter"
        android:background="@color/colorBack2"
        />
    <TextView
        android:id="@+id/gy_text_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack2"
        android:text="v1.0"
        android:textSize="14sp"
        android:textColor="@color/colorBack1"
        android:gravity="center"
        android:padding="6dp"
        />
    <View
        android:background="@color/colorBack2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:background="@color/colorBack4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <ListView

        android:id="@+id/gy_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack2"
        >
    </ListView>
    <View
        android:background="@color/colorBack4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorBack2"
        />
    <TextView
        android:id="@+id/gy_text_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorBack1"
        android:padding="6dp"
        android:background="@color/colorBack2"
        />

</LinearLayout>
