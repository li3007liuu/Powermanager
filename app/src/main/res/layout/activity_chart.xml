<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBack1"
    >
    <RelativeLayout style="@style/TopTitleBack1"
        >
        <TextView style="@style/TitleTextBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电视机"
            />
        <Button style="@style/TitleButtonBack1"
            android:id="@+id/chart_button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_dq_text"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBack2"
        >
        <TextView
            android:id="@+id/chart_text_title"
            android:text="今天"
            android:textSize="@dimen/login_text_size1"
            android:textColor="@color/colorPril4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBack2"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/login_hor_pad"
        android:paddingRight="@dimen/login_hor_pad"
        android:paddingBottom="@dimen/login_ver_pad"
        >
        <com.splxtech.powermanagor.ui.CircularRingPercentageView
            android:id="@+id/chart_progress"
            android:layout_width="180dp"
            android:layout_height="180dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBack2"
            android:paddingTop="@dimen/login_ver_pad"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:text="300"
                    android:textSize="25sp"
                    android:textColor="@color/colorPril4_3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="电量/度"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:background="@color/colorPril4_2"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:text="20.8"
                    android:textSize="25sp"
                    android:textColor="@color/colorPril4_3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="电费/元"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBack2"
            />
    </LinearLayout>

</LinearLayout>
