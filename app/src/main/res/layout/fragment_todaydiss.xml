<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBack2"
        >
        <TextView
            android:id="@+id/ftodaydiss_text_title"
            android:text="今天"
            android:textSize="@dimen/login_text_size1"
            android:textColor="@color/colorPril4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/ftodaydiss_button_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/login_hor_pad"
            android:background="@drawable/selector_ftodaydiss_next_button_blackgrd"

            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBack2"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/login_hor_pad"
        android:paddingRight="@dimen/login_hor_pad"
        android:paddingBottom="@dimen/login_ver_pad"
        >
        <com.splxtech.powermanagor.ui.CircularRingPercentageView
            android:id="@+id/ftodaydiss_progress"
            android:layout_width="180dp"
            android:layout_height="180dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBack2"
            android:paddingTop="@dimen/login_ver_pad"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/ftodaydiss_text_waste"
                    android:text="300"
                    android:textSize="25sp"
                    android:textColor="@color/colorPril4_3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="电量/度"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <View
                android:background="@color/colorPril4_2"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/ftodaydiss_text_money"
                    android:text="20.8"
                    android:textSize="25sp"
                    android:textColor="@color/colorPril4_3"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text="电费/元"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/ftodaydiss_barchart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBack2"
            />
    </LinearLayout>
</LinearLayout>
