<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogapp_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView style="@style/DqImageIcons"
            android:id="@+id/dialogapp_image_sicon"
            />
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_marginTop="8.8dp"
                    android:layout_marginLeft="@dimen/login_hor_pad"
                    android:text="ID"
                    android:textColor="@color/colorPril4_3"
                    android:textSize="@dimen/login_text_size2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:id="@+id/dialogapp_text_id"
                    android:layout_marginTop="8.8dp"
                    android:layout_marginRight="@dimen/login_hor_pad"
                    android:textColor="@color/colorPril4_3"
                    android:textSize="@dimen/login_text_size2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginBottom="8.8dp"
                    android:layout_marginLeft="@dimen/login_hor_pad"
                    android:gravity="bottom"
                    android:text="名称"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <EditText
                    android:id="@+id/dialogapp_edit_name"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_3"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginRight="@dimen/login_hor_pad"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View
        android:background="@color/colorPril4_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/login_hor_pad"
        android:layout_marginRight="@dimen/login_hor_pad"
        />
    <GridView
        android:id="@+id/dialogapp_grid_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_ver_pad"
        android:layout_marginLeft="@dimen/login_hor_pad"
        android:layout_marginRight="@dimen/login_hor_pad"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:numColumns="5"
        android:gravity="center"
        />
</LinearLayout>
