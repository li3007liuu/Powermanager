<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/yjgladd1_button_help"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src = "@drawable/help"
        android:scaleType="fitCenter"
        android:background="@color/tm"
        android:layout_gravity="right"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="@dimen/login_hor_pad"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/yjgladd1_image_product"
            android:layout_width="201dp"
            android:layout_height="167dp"
            android:layout_centerInParent="true"
            android:src="@drawable/product2"
            />
        <TextView
            android:id="@+id/yjgladd1_text_top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/yjgladd1_image_product"
            android:layout_marginBottom="@dimen/item_main_height"
            android:text="当wifi灯闪时，点击下一步"
            android:textColor="@color/colorPril4_2"
            android:textSize="@dimen/login_text_size2"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/yjgladd1_text_top2"
            android:text="确认智能电表已接入电源"
            android:textSize="@dimen/login_text_size1"
            android:textColor="@color/colorPril4_2"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/yjgladd1_image_product"
            android:layout_marginTop="@dimen/item_main_height"
            android:layout_marginBottom="@dimen/login_ver_pad"
            >
            <Button style="@style/ButtonBack4"
                android:id="@+id/yjgladd1_button_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                />
            <Button style="@style/ButtonBack4"
                android:id="@+id/yjgladd1_button_next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="下一步"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
