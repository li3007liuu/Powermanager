<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout style="@style/TopTitleBack1"
        >
        <TextView style="@style/TitleTextBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            />
    </RelativeLayout>
    <View 
        android:layout_height="@dimen/login_ver_pad" 
        android:layout_width="match_parent"
        android:background="@color/colorBack4"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/grzx_linear_height"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPril4_4"
            >
            <ImageView
                android:id = "@+id/grzx_imageB_face"
                android:layout_width="@dimen/grzx_image_height"
                android:layout_height="@dimen/grzx_image_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/login_hor_pad"
                android:layout_marginRight="@dimen/login_hor_pad"
                android:src="@drawable/face"
                android:scaleType="fitCenter"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/login_hor_pad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/grzx_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="萧玉竹"
                        android:textSize="18dp"
                        android:textColor="@color/colorPril4_3"
                        />
                    <RadioButton
                        android:id="@+id/grzx_radio_sex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:button="@null"
                        android:checked="true"
                        android:background="@drawable/selector_sex_radio"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/grzx_text_email"
                    android:text="邮箱:lx2018fc@qq.com"
                    android:textSize="16sp"
                    android:textColor="@color/colorPril4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/grzx_button_userset"
            android:background="@color/tm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </FrameLayout>
    <View
        android:layout_height="@dimen/login_ver_pad"
        android:layout_width="match_parent"
        android:background="@color/colorBack4" />
    <ListView
        android:id="@+id/grzx_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPril4_4"
        >

    </ListView>

</LinearLayout>
