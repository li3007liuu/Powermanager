<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBack1"
    >
    <RelativeLayout style="@style/TopTitleBack1"
        >
        <TextView style="@style/TitleTextBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            />
        <Button style="@style/TitleButtonBack1"
            android:id="@+id/register2_button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_return_text"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBack4"
        android:orientation="vertical"
        >
        <EditText style="@style/EditTextBack4"
            android:id="@+id/register2_edit_pass1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="@dimen/login_ver_pad"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />
        <EditText style="@style/EditTextBack4"
            android:id="@+id/register2_edit_pass2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:layout_marginTop="0.5dp"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            />
        <Button style="@style/ButtonBack4"
            android:id="@+id/register2_button_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_height"
            android:text="完成注册"
            />
    </LinearLayout>

</LinearLayout>
