<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorBack2"
        >
        <TextView
            android:id="@+id/fdaydiss_text_title"
            android:text="今天"
            android:textSize="@dimen/login_text_size1"
            android:textColor="@color/colorPril4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <Button
            android:id="@+id/fdaydiss_button_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/login_hor_pad"
            android:background="@drawable/selector_ftodaydiss_next_button_blackgrd"

            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack2"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/fdaydiss_text_waste"
                android:text="300"
                android:textSize="25sp"
                android:textColor="@color/colorPril4_3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="电量/度"
                android:textSize="@dimen/login_text_size2"
                android:textColor="@color/colorPril4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:background="@color/colorPril4_2"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/fdaydiss_text_money"
                android:text="20.8"
                android:textSize="25sp"
                android:textColor="@color/colorPril4_3"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="电费/元"
                android:textSize="@dimen/login_text_size2"
                android:textColor="@color/colorPril4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack2"
        android:paddingLeft="@dimen/login_hor_pad"
        android:paddingRight="@dimen/login_hor_pad"
        android:paddingTop="@dimen/login_ver_pad"
        >
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id = "@+id/fdaydiss_hbarchart"
            android:layout_width = "0dp"
            android:layout_height = "180dp"
            android:layout_weight = "1"
            android:background = "@color/colorBack2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            >
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw1"
                android:text="33°"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw2"
                android:text="33°"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw3"
                android:text="33°"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw4"
                android:text="33°"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw5"
                android:text="33°"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqw6"
                android:text="33°"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingRight="4dp"
            >
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp1"
                android:text="30%"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp2"
                android:text="30%"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp3"
                android:text="30%"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp4"
                android:text="30%"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp5"
                android:text="30%"
                />
            <TextView style="@style/fdaydiss_hcharttext"
                android:id = "@+id/fdaydiss_text_dqp6"
                android:text="30%"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/login_hor_pad"
        android:paddingRight="@dimen/login_hor_pad"
        android:paddingTop="@dimen/login_ver_pad"
        android:paddingBottom="@dimen/login_ver_pad"
        android:background = "@color/colorBack2"
        >
        <com.github.mikephil.charting.charts.BarChart
            android:id = "@+id/fdaydiss_linechart"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background = "@color/colorBack2"
            />
    </LinearLayout>
</LinearLayout>
