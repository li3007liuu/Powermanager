<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/login_ver_pad"
        android:layout_marginLeft="@dimen/login_hor_pad"
        android:layout_marginRight="@dimen/login_hor_pad"
        android:layout_width="@dimen/item_yjgl_image"
        android:layout_height="@dimen/item_yjgl_image"
        android:layout_gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iyjgl_image_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iyjgl_check_select"
            android:layout_width="@dimen/item_main_image"
            android:layout_height="@dimen/item_main_image"
            android:background="@drawable/select"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/iyjgl_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/login_ver_pad"
        android:textColor="@color/colorPril4_3"
        android:textSize="@dimen/login_text_size3"
        />

</LinearLayout>
