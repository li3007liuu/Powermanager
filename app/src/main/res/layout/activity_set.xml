<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBack1"
    >
    <RelativeLayout style="@style/TopTitleBack1"
        >
        <TextView style="@style/TitleTextBack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            />
        <Button style="@style/TitleButtonBack1"
            android:id="@+id/set_button_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_grzx_text"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBack2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_ver_pad"
                android:background="@color/colorBack4" />
            <Button style="@style/set_text"
                android:id="@+id/set_button_userset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_main_height"
                android:background="@drawable/selector_setbutton_color_bkg"
                android:text="用户设置"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_ver_pad"
                android:background="@color/colorBack4" />
            <Switch style="@style/set_text"
                android:id="@+id/set_switch_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_main_height"
                android:paddingRight="@dimen/login_hor_pad"
                android:text="开启消息推送"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_ver_pad"
                android:background="@color/colorBack4" />
            <TextView style="@style/set_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:text="通信周期"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <SeekBar
                    android:id="@+id/set_seekbar_sendf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/login_hor_pad"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/set_text_sendf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/login_hor_pad"
                    android:textSize="@dimen/login_text_size2"
                    android:textColor="@color/colorPril4_3"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_ver_pad"
                android:background="@color/colorBack4" />
            <Button style="@style/set_text"
                android:id="@+id/set_button_softup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_main_height"
                android:background="@drawable/selector_setbutton_color_bkg"
                android:text="软件更新"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBack4" />
            <Button style="@style/set_text"
                android:id="@+id/set_button_hardup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_main_height"
                android:background="@drawable/selector_setbutton_color_bkg"
                android:text="固件更新"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBack4" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
